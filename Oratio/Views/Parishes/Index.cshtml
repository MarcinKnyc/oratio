@using Oratio.Areas.Identity.Data
@model IEnumerable<Oratio.Models.Parish>
@inject CurrentUserRepository currentUserRepository

@{
    ViewData["Title"] = "Parishes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Parishes</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dedicated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MinimumOffering)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dedicated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MinimumOffering)
            </td>
           @if (currentUserRepository.isLoggedInAsParish() == true)
           {
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
            </td>
            }
        </tr>
}
    </tbody>
</table>
