@model Oratio.Models.Parish

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Parish</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dedicated" class="control-label"></label>
                <input asp-for="Dedicated" class="form-control" />
                <span asp-validation-for="Dedicated" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MinimumOffering" class="control-label"></label>
                <input asp-for="MinimumOffering" class="form-control" />
                <span asp-validation-for="MinimumOffering" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="OwnerId" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a href="#" onclick="history.go(-1);">Return without saving</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
